@model IEnumerable<PersonasHamlet.Dtos.PersonaDto>


@{
    Layout = "_Layout";
}



<!DOCTYPE html>
<html>
<head>
    <style>
        h1{
            display:none;
        }
    </style>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js">

    </script>
</head>
<body>
    <h2>Personas</h2>
    <p>Numero de Registros: @Model.Count()</p>
    <h1>
        @Model.FirstOrDefault(p => p.Age == Model.Max(a => a.Age)).Name
    </h1>

    <button onclick="location.href='@Url.Action("PersonaForm", "Personas")';return false;">Agregar Registro</button>
    <button onclick="location.href='@Url.Action("Index", "Home")';return false;">Regresar</button>
    <button id="elderButton">Show me the Oldest</button>
    <table>
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Edad</th>
            </tr>
        </thead>
        <tbody>
            @foreach (PersonasHamlet.Dtos.PersonaDto p in Model)
            {
                <tr>
                    <td>@p.Name</td>
                    <td>@p.LastName</td>
                    <td>@p.Age</td>
                </tr>
            }
        </tbody>
    </table>

    <script>
        $('#elderButton').click(function (e) {
            alert(e.currentTarget.outerHTML)
        })
    </script>
</body>
</html>     